import Link from "./general/Link.astro";
import {Menu} from "lucide-react";
 ---

<nav class="fixed top-6 left-1/2 -translate-x-1/2 w-[90%] max-w-7xl flex items-center justify-between sm:justify-center z-30 pointer-events-auto">
    <div class="font-bold text-2xl tracking-wide">
        <!--Steven<span class="text-cyan-400">Lie</span>-->
    </div>

    <div class="hidden sm:flex bg-white/10 backdrop-blur-sm border border-white/20 rounded-full px-6 py-2 items-center gap-6 shadow-lg">
        <ul class="flex items-center sm:gap-x-6 text-sm font-medium">
            <li><Link text="Home" href="#home" /></li>
            <li><Link text="Experience" href="#experience" /></li>
            <li><Link text="Certificate" href="#certificate" /></li>
            <li><Link text="Project" href="#project" /></li>
            <li><Link text="Contact" href="#contact" /></li>
        </ul>
    </div>

    <div class="sm:hidden">
        <button id="menu-btn" class="text-white p-2 rounded-sm focus:outline-none">
            <Menu />
        </button>
    </div>

    <div id="mobile-menu" class="hidden absolute top-16 right-4 bg-white/10 backdrop-blur-sm border border-white/20 rounded-xl p-4 shadow-lg sm:hidden">
        <ul class="flex flex-col gap-4 text-sm font-medium">
            <li><Link text="Home" href="#home" /></li>
            <li><Link text="Experience" href="#experience" /></li>
            <li><Link text="Certificate" href="#certificate" /></li>
            <li><Link text="Project" href="#project" /></li>
            <li><Link text="Contact" href="#contact" /></li>
        </ul>
    </div>
</nav>

<script>
    const btn = document.getElementById("menu-btn");
    const menu = document.getElementById("mobile-menu");
    btn?.addEventListener("click", () => {
        menu?.classList.toggle("hidden");
    });
</script>
