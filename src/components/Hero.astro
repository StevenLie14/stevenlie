---

import {InteractiveHoverButton} from "./ui/interactive-hover-button";
import {BoxReveal} from "./ui/box-reveal";
import {Download} from "lucide-react";

---

<section id="home" class="min-h-screen text-foreground relative overflow-hidden pt-30">
    <div class="max-w-7xl mx-auto px-6 py-20 relative z-10">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
            <div class="space-y-8">
                <div class="space-y-4">
                    <BoxReveal client:load boxColor={"#5046e6"} duration={0.5}>
                        <p class="text-[2.5rem] font-semibold">
                            Hello, I am<span class="text-[#5046e6]"> Steven Liementha</span>
                        </p>
                    </BoxReveal>
                    <BoxReveal client:load boxColor={"#5046e6"} duration={0.5}>
                        <h1 class="text-5xl lg:text-6xl font-bold text-balance text-primary animate-pulse-neon">
                            Data Scientist
                        </h1>
                    </BoxReveal>
                    <BoxReveal client:load boxColor={"#5046e6"} duration={0.5}>
                        <p class="text-lg text-muted-foreground max-w-md text-pretty">
                            Crafting digital experiences in the neon-lit world of tomorrow. Specializing in cutting-edge web
                            technologies and futuristic user interfaces.
                        </p>
                    </BoxReveal>

                </div>

                <div class="flex items-center gap-4">
                    <InteractiveHoverButton className="pointer-events-auto text-primary-foreground animate-glow">
                        <div class="flex items-center gap-2">
                            <Download className="w-4 h-4"/> Download CV
                        </div>
                    </InteractiveHoverButton>
                </div>

            </div>

            <div class="flex justify-center lg:justify-end">
                <div class="relative">
                    <div class="w-80 h-80 bg-card neon-border rounded-full flex items-center justify-center relative overflow-hidden">
                        <div class="absolute inset-0 bg-gradient-to-br from-primary/20 to-secondary/20"></div>
                        <div class="text-8xl relative z-10">ðŸ¤–</div>
                        <div class="absolute top-4 right-4 w-2 h-2 bg-primary rounded-full animate-ping"></div>
                        <div
                                class="absolute bottom-8 left-8 w-1 h-1 bg-secondary rounded-full animate-ping"
                                style={{ animationDelay: "0.5s" }}
                        ></div>
                        <div
                                class="absolute top-1/2 left-4 w-1 h-1 bg-accent rounded-full animate-ping"
                                style={{ animationDelay: "1s" }}
                        ></div>
                    </div>
                    <div class="absolute -top-4 -right-4 w-8 h-8 bg-primary rounded-full animate-bounce neon-border"></div>
                    <div
                            class="absolute -bottom-4 -left-4 w-6 h-6 bg-secondary rounded-full animate-bounce neon-border"
                            style={{ animationDelay: "0.5s" }}
                    ></div>
                </div>
            </div>
        </div>
    </div>
</section>